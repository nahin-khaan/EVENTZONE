<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#FF2670"
    tools:context=".SplashScreen">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logoId"
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:layout_marginTop="100dp"
            android:elevation="10dp"
            android:src="@drawable/applogo" />

        <TextView
            android:id="@+id/appTittleId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            android:text="@string/app_name"
            android:fontFamily="@font/firasansbold"
            android:textSize="40sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/balonFireworkImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/fireOneId"
            android:layout_width="60dp"
            android:layout_height="100dp"
            android:layout_marginTop="130dp"
            android:elevation="10dp"
            android:src="@drawable/fireworks" />

        <ImageView
            android:id="@+id/ballonId"
            android:layout_width="60dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="100dp"
            android:elevation="10dp"
            android:src="@drawable/balloons" />

        <ImageView
            android:id="@+id/fireTwoId"
            android:layout_width="60dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="60dp"
            android:elevation="10dp"
            android:src="@drawable/fireworks" />

    </LinearLayout>
    <ProgressBar
        android:id="@+id/progressId"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="150dp"
        android:progressBackgroundTint="@color/pink"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:progressTint="@color/pink"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="One Stop solution App for event Management"
        android:fontFamily="@font/firasansbook "
        android:drawableTop="@drawable/event_ic"
        android:textSize="13sp" />


</LinearLayout>